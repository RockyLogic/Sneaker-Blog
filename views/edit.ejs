<%- include("partials/header"); %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form class="ui form"action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input required type="text" name="blog[title]" placeholder="Title" value="<%=blog.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input required type="text" name="blog[image]" placeholder="Image" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label>Content</label>
            <textarea required name="blog[body]"><%=blog.body%></textarea>
        </div>
        <input class="ui inverted green button small" type="submit">
    </form>
</div>
<%- include("partials/footer"); %>